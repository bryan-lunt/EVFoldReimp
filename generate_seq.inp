       do (segid=capitalize(&nucl_segid_$counter)) (attr refx=9999)
     end if
     evaluate ($counter=$counter+1)
   else
     evaluate ($done=true)
   end if
 end loop nucl

 {* patch rna sugars to dna here if needed - select the residues *}
 {===>} 
 for $resid in () loop dna
   patch deox reference=nil=(resid $resid) end
 end loop dna
 {<===}

